/* pages/topic/topic.wxss */
.banner {
  background-color: rgba(0,0,0,0.45);
  color: white;
  width: 100%;
  height: 460rpx;
  box-sizing: border-box;
}
.banner-mask {
  /* background-image: url('http://oss.matrixsci.cn/bycircle/topic/banner/default.png'); */
  background-size: 100% 100%;
  z-index: -1;
}
.banner .title-wrapper {
  margin-top: -13px;
  padding-top: 75px;
}
.banner .title {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 12px;
}
.banner .description {
  font-size: 12px;
}

.banner-bottom-bar {
  background-color: rgba(0,0,0,0.45);
  height: 120rpx;
  font-size: 12px;
}

.no-topic {
  height: 600rpx;
}
.no-topic image {
  width: 56px;
}
.no-topic-description {
  font-size:13px;
  color:#c8d4e0;
  margin-top: 10px;
}

.sort-type {
  border:2rpx solid #ffffff;
  border-radius:100px;
  padding: 0 16rpx 0 20rpx;
  height:52rpx;
  line-height:52rpx;
  margin-right: 40rpx;
}

image.down-triangle {
  width: 14rpx;
  height: 8rpx;
  margin-left: 8rpx;
}