/* pages/my/my-profile-edit.wxss */
page {
  background-color: white;
  height: 100%;
}

.gray-bar {
  background:#f5f5f5;
  width:375px;
  height:10px;
}

input {
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid #f5f5f5;
}

image {
  width: 120px;
  height: 120px;
  border:2px solid #ffffff;
  box-shadow:0 4px 6px 0 rgba(0,0,0,0.25);
  border-radius:100%;
}
.buttons {
  margin-top: 20px;
}
.link {
  color:#89a6ff;
}
.gray {
  color: #ddd;
}
.tool-bar {
  margin-top: 20px;
  text-align: right;
}
.save-btn {
  font-size: 12px;
  background-color:#89a6ff;
  color:white;
  padding:5px 20px;
  border-radius:100px;
  /* height: 22px; */
  line-height: 1rem;
  vertical-align: text-bottom;
}
.save-btn + .save-btn {
  margin-left: 10px;
}