/* pages/component/image-selector.wxss */
.image-selector-wrapper {
  /* background-color: white; */
  padding: 26rpx 38rpx;
  display: flex;
  flex-wrap: wrap;
}

.no-padding {
  padding: 0;
}

.image-item {
  width: 25%;
  text-align: center;
  margin-bottom: 7px;
  position: relative;
}

.image-item image {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  border-radius: 20rpx;
  border: 1px solid #f5f5f5;
  box-sizing: border-box;
}
.image-item.image-item-large {
  width: 33%;
}
.image-item.image-item-large image {
  width: 200rpx;
  height: 200rpx;
}

.image-item image image.delete-image-btn {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  right: 8rpx;
  top: 8rpx;
}
.submit-btn-wrapper {
  position: relative;
  bottom: 0;
}