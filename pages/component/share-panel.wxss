/* pages/component/share-panel.wxss */
.share-panel {
  visibility: hidden;
  opacity: 0;
  transition: 300ms;
}
.share-panel.show {
  visibility: visible;
  opacity: 1;
}

.share-panel .mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  z-index: 9999;
}

.share-panel .panel {
  position: fixed;
  bottom: -130px;
  left: 0;
  height: 130px;
  width: 100%;
  background-color: white;
  z-index: 10000;
  /* margin-bottom: -130px; */
  transition: 300ms;
}
.share-panel.show .panel {
  /* margin-bottom: 0; */
  bottom: 0;
}

.share-panel .panel .title {
  text-align: center;
  margin-top: 20px;
  margin-bottom: 20px;
  font-size:14px;
  color:#323b45;
}

.share-panel .panel .btn-group {
  display: flex;
  flex-wrap: nowrap;
  font-size:13px;
  color:#a8b6c8;
  justify-content: space-around;
}
.btn {
  width: 49%;
  text-align: center;
}
.btn .img {
  margin-bottom: 10px;
}
.btn image {
  width: 20px;
}