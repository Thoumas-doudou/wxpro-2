/**app.wxss**/
@import "./pages/template/topics.wxss";
@import "./pages/template/float-btn.wxss";
@import "./pages/template/bottom-loading.wxss";

page {
  background-color: #f5f5f5;
}

.common-padding {
  padding: 26rpx 50rpx;
  box-sizing: border-box;
}

.fullwidth { width: 100%; }
.fullheight { height: 100%; }
.full { width: 100%; height: 100% }

/* 布局相关 */
.relative { position: relative; }
.absolute { position: absolute; }
.fixed { position: fixed; }

.left { left: 0; }
.right { right: 0; }
.bottom { bottom: 0; }
.top { top: 0; }

.text-right { text-align: right; }
.text-center { text-align: center; }
.text-vcenter { display: table-cell; vertical-align: middle; }
.content-center { display: flex; align-items: center; text-align: center; justify-content: space-around; }
.content-vcenter { display: flex; align-items: center; }

.inline-block { display: inline-block!important; }
.hidden { display: none; }

/* flex布局相关 */
.flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flex.flex-top {
  align-items: flex-start;
}
.grow0 { flex-grow: 0; }
.grow1 { flex-grow: 1; }
.shrink0 { flex-shrink: 0; }
.shrink1 { flex-shrink: 1; }
.flex.nowrap { flex-wrap: nowrap }
.flex.wrap { flex-wrap: wrap; }

/* 修正图片和文字一起排列的时候错位的问题 */
image {
  vertical-align: middle;
}

.z-index-1 {
  z-index: 1;
}

/* 隐藏分享按钮的所有样式 */
button.share-btn {
  border: none!important;
  background: none;
  font-size: inherit;
  color: inherit;
  text-align: inherit;
  padding: 0!important;
  height: unset;
  line-height: unset;
  display: inline-block;
  vertical-align: middle;
}
button.share-btn:after {
  border: none;
  padding: 0;
}

.placeholder {
  font-size:14px;
  color:#ccdbed;
}
.graybar {
  width: 100%;
  height: 5px;
  background-color: #f5f5f5;
}
.graybar.height10 {
  height: 10px;
}
.graybar.height20 {
  height: 20px;
}

.bold {
  font-weight: bold;
}

navigator:hover, navigator-hover {
  background-color: transparent;
}

textarea {
  padding: 0!important;
  margin: 0!important;
}


.share-post {
  background-color: white;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 999;
}

.bottom-bar.bottom-padding {
  padding-bottom: 20px;
}

.page-wrapper {
  overflow-x: hidden;
}